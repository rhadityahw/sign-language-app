<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_bg"
    tools:context=".ui.account.AccountFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_account"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"
                android:layout_marginHorizontal="25dp"
                app:cardBackgroundColor="@color/purple"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_avatar_account"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="10dp"
                        tools:src="@tools:sample/avatars"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tv_username_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/john_doe"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginStart="25dp"
                        app:layout_constraintStart_toEndOf="@id/iv_avatar_account"
                        app:layout_constraintTop_toTopOf="@id/iv_avatar_account"/>

                    <TextView
                        android:id="@+id/tv_email_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/john_doe_email"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginStart="25dp"
                        app:layout_constraintStart_toEndOf="@id/iv_avatar_account"
                        app:layout_constraintTop_toBottomOf="@id/tv_username_account"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/header_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/text_pengaturan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pengaturan"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginVertical="15dp"
                android:layout_marginStart="25dp"
                app:layout_constraintTop_toBottomOf="@id/layout_settings"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:id="@+id/layout_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/text_pengaturan"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple"
                    android:elevation="0dp">

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        android:layout_marginHorizontal="25dp"/>

                    <TextView
                        android:id="@+id/text_mode_gelap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mode_gelap"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginVertical="15dp"
                        android:layout_marginStart="25dp"/>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/purple"
                    android:elevation="0dp">

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        android:layout_marginHorizontal="25dp"/>

                    <TextView
                        android:id="@+id/text_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notifikasi"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginVertical="15dp"
                        android:layout_marginStart="25dp"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/text_tentang_kami"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tentang_kami"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginVertical="15dp"
                android:layout_marginStart="25dp"
                app:layout_constraintTop_toBottomOf="@id/layout_settings"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/text_tentang_kami"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/purple"
                    android:elevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/faq"
                        android:textSize="22sp"
                        android:textColor="@color/white"
                        android:layout_marginVertical="15dp"
                        android:layout_marginStart="25dp"
                        android:fontFamily="@font/poppins_semibold"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_expand_right"
                        android:layout_marginEnd="25dp"
                        android:layout_gravity="end"
                        android:layout_marginVertical="15dp"
                        android:fontFamily="@font/poppins_semibold"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/purple"
                    android:elevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hubungi_kami"
                        android:textSize="22sp"
                        android:textColor="@color/white"
                        android:layout_marginVertical="15dp"
                        android:layout_marginStart="25dp"
                        android:fontFamily="@font/poppins_semibold"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_expand_right"
                        android:layout_marginEnd="25dp"
                        android:layout_gravity="end"
                        android:layout_marginVertical="15dp"
                        android:fontFamily="@font/poppins_semibold"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/purple"
                    android:elevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ketentuan_layanan"
                        android:textSize="22sp"
                        android:textColor="@color/white"
                        android:layout_marginVertical="15dp"
                        android:layout_marginStart="25dp"
                        android:fontFamily="@font/poppins_semibold"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_expand_right"
                        android:layout_marginEnd="25dp"
                        android:layout_gravity="end"
                        android:layout_marginVertical="15dp"
                        android:fontFamily="@font/poppins_semibold"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/purple"
                    android:elevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Log Out"
                        android:textSize="22sp"
                        android:textColor="@color/white"
                        android:layout_marginVertical="15dp"
                        android:layout_marginStart="25dp"
                        android:fontFamily="@font/poppins_semibold"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_logout"
                        android:layout_marginEnd="25dp"
                        android:layout_gravity="end"
                        android:layout_marginVertical="15dp"
                        android:fontFamily="@font/poppins_semibold"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>