<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SignLanguageApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/purple_200</item>
    </style>

    <style name="TextHome">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextHomeSlogan">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextTitleCard">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Icon">
        <item name="android:tint">@color/light_gray</item>
    </style>

    <style name="Background">
        <item name="android:background">@drawable/purple_500_bg</item>
        <item name="android:backgroundTint">@color/purple_500</item>
    </style>

    <style name="BackgroundDictionary">
        <item name="android:backgroundTint">@color/black</item>
    </style>
</resources>